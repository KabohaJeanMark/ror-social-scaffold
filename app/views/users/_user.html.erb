<% if current_user!= user%>
  <li>
    Name: <%= user.name %>
    <span class="profile-link">
      <%= link_to 'See Profile',  user_path(user), class: 'profile-link' %>
    </span>
    <% if !request_already_sent?(user) && current_user!= user && !already_friend?(user) %>
      <span>
        <%= link_to 'Add Friend', friendships_path(friendship: {user_id:current_user.id, friend_id:user.id, confirmed:nil}), method: :post, class: 'btn btn-primary' %>
      </span>
    <% end %>
  </li>
<% end %>